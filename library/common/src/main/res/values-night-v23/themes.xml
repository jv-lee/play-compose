<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.PlayCompose" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorThemePrimary</item>
        <item name="colorPrimaryVariant">@color/colorThemePrimaryDark</item>
        <item name="colorOnPrimary">@color/colorThemeAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorThemePrimary</item>
        <item name="colorSecondaryVariant">@color/colorThemePrimaryDark</item>
        <item name="colorOnSecondary">@color/colorThemeAccent</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:statusBarColor" >@android:color/transparent</item>
    </style>

</resources>