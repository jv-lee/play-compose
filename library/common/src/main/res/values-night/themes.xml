<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.PlayCompose" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorThemePrimary</item>
        <item name="colorPrimaryVariant">@color/colorThemePrimaryDark</item>
        <item name="colorOnPrimary">@color/colorThemeAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorThemePrimary</item>
        <item name="colorSecondaryVariant">@color/colorThemePrimaryDark</item>
        <item name="colorOnSecondary">@color/colorThemeAccent</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:statusBarColor" >#33000000</item>
    </style>

    <style name="Theme.ComposeApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ComposeApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeDatePickerDialog" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">#4100AB</item>
    </style>

    <style name="ThemeNightDatePickerDialog" parent="android:Theme.Material.Dialog">
        <item name="android:colorAccent">@color/colorThemeFocus</item>
        <item name="android:colorBackground">@color/colorThemeItem</item>
    </style>
</resources>